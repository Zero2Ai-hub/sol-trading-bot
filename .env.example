# =============================================================================
# SOLANA MOMENTUM TRADING BOT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# ENVIRONMENT
# -----------------------------------------------------------------------------
NODE_ENV=development
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# RPC CONFIGURATION (Helius)
# -----------------------------------------------------------------------------
# Primary Helius RPC endpoint (HTTP)
HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY

# Helius WebSocket endpoint
HELIUS_WS_URL=wss://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY

# Helius gRPC endpoint (for Yellowstone)
HELIUS_GRPC_URL=https://mainnet.helius-rpc.com

# Helius API key (used for DAS API, webhooks, etc.)
HELIUS_API_KEY=YOUR_HELIUS_API_KEY

# Backup RPC endpoints (comma-separated, optional)
BACKUP_RPC_URLS=

# RPC health check interval in milliseconds
RPC_HEALTH_CHECK_INTERVAL_MS=10000

# Maximum acceptable RPC latency in milliseconds
RPC_MAX_LATENCY_MS=500

# -----------------------------------------------------------------------------
# WALLET CONFIGURATION (CRITICAL - KEEP SECURE!)
# -----------------------------------------------------------------------------
# Primary trading wallet (base58 encoded private key)
# WARNING: Never share or commit this value!
WALLET_PRIVATE_KEY=

# Optional: Additional wallets for rotation (base58 encoded)
WALLET_2_PRIVATE_KEY=
WALLET_3_PRIVATE_KEY=

# Wallet encryption key (for encrypted storage mode)
# Generate with: openssl rand -hex 32
WALLET_ENCRYPTION_KEY=

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/momentum_bot
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# -----------------------------------------------------------------------------
# TRADING PARAMETERS
# -----------------------------------------------------------------------------
# Maximum SOL per position
MAX_POSITION_SIZE_SOL=0.5

# Maximum concurrent open positions
MAX_CONCURRENT_POSITIONS=3

# Maximum total exposure in SOL
MAX_TOTAL_EXPOSURE_SOL=2.0

# Minimum momentum score to consider (0-100)
MIN_MOMENTUM_SCORE=65

# Bonding curve entry thresholds (percentage)
BONDING_CURVE_MIN_PERCENT=70
BONDING_CURVE_MAX_PERCENT=95

# -----------------------------------------------------------------------------
# RISK MANAGEMENT
# -----------------------------------------------------------------------------
# Daily loss limit as percentage of capital
DAILY_LOSS_LIMIT_PERCENT=10

# Maximum drawdown before kill switch triggers (percentage)
MAX_DRAWDOWN_PERCENT=15

# Default stop-loss percentage from entry
DEFAULT_STOP_LOSS_PERCENT=15

# Take profit levels (comma-separated percentages)
TAKE_PROFIT_LEVELS=25,50,100

# Take profit percentages to sell at each level
TAKE_PROFIT_PERCENTAGES=30,40,30

# -----------------------------------------------------------------------------
# EXECUTION SETTINGS
# -----------------------------------------------------------------------------
# Use Jito bundles for MEV protection
USE_JITO=true

# Jito block engine URL
JITO_BLOCK_ENGINE_URL=https://mainnet.block-engine.jito.wtf

# Jito tip amount in lamports
JITO_TIP_LAMPORTS=10000

# Maximum slippage in basis points (100 = 1%)
MAX_SLIPPAGE_BPS=500

# Default priority fee in microlamports
PRIORITY_FEE_MICROLAMPORTS=10000

# Maximum priority fee (for congestion)
MAX_PRIORITY_FEE_MICROLAMPORTS=500000

# Transaction confirmation timeout in milliseconds
TX_CONFIRMATION_TIMEOUT_MS=30000

# Maximum retry attempts for failed transactions
MAX_TX_RETRIES=3

# -----------------------------------------------------------------------------
# JUPITER API
# -----------------------------------------------------------------------------
JUPITER_API_URL=https://quote-api.jup.ag/v6
JUPITER_PRICE_API_URL=https://price.jup.ag/v6

# Rate limit: requests per minute
JUPITER_RATE_LIMIT_RPM=60

# -----------------------------------------------------------------------------
# MONITORING & ALERTS
# -----------------------------------------------------------------------------
# Enable paper trading mode (no real transactions)
ENABLE_PAPER_TRADING=true

# Discord webhook for alerts (optional)
DISCORD_WEBHOOK_URL=

# Telegram bot token and chat ID (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Alert on trades
ALERT_ON_TRADE=true

# Alert on errors
ALERT_ON_ERROR=true

# Alert on kill switch activation
ALERT_ON_KILL_SWITCH=true

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
# Log directory
LOG_DIR=./data/logs

# Log file retention in days
LOG_RETENTION_DAYS=30

# Trade log retention (longer for analysis)
TRADE_LOG_RETENTION_DAYS=90

# Enable console logging
LOG_TO_CONSOLE=true

# Enable file logging
LOG_TO_FILE=true
